{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<!-- ====== Forms Section Start -->
	<section class="bg-gray-1 dark:bg-dark py-20 lg:py-[120px]">
		<div class="container mx-auto">
			<div class="flex flex-wrap -mx-4">
				<div class="w-full px-4">
					<div class="relative mx-auto max-w-[525px] overflow-hidden rounded-lg py-16 px-10 text-center sm:px-12 md:px-[60px] bg-dark-2">
						<div class="mb-10 text-center md:mb-16">
							<a href="javascript:void(0)" class="mx-auto inline-block max-w-[160px]">
								<img src="{{ asset('images/logo.png') }}" alt="logo"/>
							</a>
						</div>
						<form method="post">
							{% if error %}
								<div class="mb-6">
									<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
								</div>
							{% endif %}
							<div class="mb-6">
								<input type="text" placeholder="Username" name="_username" id="username" class="w-full px-5 py-3 text-base bg-transparent border rounded-md outline-none border-stroke text-body-color dark:text-white dark:border-dark-3 focus:border-primary focus-visible:shadow-none" autocomplete="username" required autofocus/>
							</div>
							<div class="mb-6">
								<input type="password" placeholder="Password" name="_password" id="password" class="w-full px-5 py-3 text-base bg-transparent border rounded-md outline-none border-stroke text-body-color dark:text-white dark:border-dark-3 focus:border-primary focus-visible:shadow-none" autocomplete="current-password" required/>
							</div>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<div class="mb-10">
								<button type="submit" class="w-full px-5 py-3 text-base font-medium text-white transition border rounded-md cursor-pointer border-primary bg-primary hover:bg-opacity-90">
									Sign In
								</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- ====== Forms Section End -->
{% endblock %}
