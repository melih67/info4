{{ form_start(form) }}
<div class="flex flex-col space-y-4">
	<div class="flex flex-col">
		<label for="{{ form.marque.vars.id }}" class="text-sm font-semibold">Marque:</label>
		<select id="{{ form.marque.vars.id }}" name="{{ form.marque.vars.full_name }}" class="text-black mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">

			{% for marque in form.marque.vars.choices %}
				<option value="{{ marque.value }}">{{ marque.label }}</option>
			{% endfor %}
		</select>
	</div>
	<div class="flex flex-col">
		<label for="{{ form.name.vars.id }}" class="text-sm font-semibold">Nom:</label>
		{{ form_widget(form.name, { 'attr': {'class': 'text-black mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'} }) }}
	</div>
	<div class="flex flex-col">
		<label for="{{ form.description.vars.id }}" class="text-sm font-semibold">Description:</label>
		{{ form_widget(form.description, { 'attr': {'class': 'text-black mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'} }) }}

	</div>
	<div class="flex flex-col">
		<label for="{{ form.prix.vars.id }}" class="text-sm font-semibold">Prix:</label>
		{{ form_widget(form.prix, { 'attr': {'class': 'text-black mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'} }) }}

	</div>
	<div class="flex flex-col">
		<label for="{{ form.stock.vars.id }}" class="text-sm font-semibold">Stock:</label>
		{{ form_widget(form.stock, { 'attr': {'class': 'text-black mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'} }) }}

	</div>
	<div class="flex flex-col">
		<label for="{{ form.image.vars.id }}" class="text-sm font-semibold">Image:</label>
		{{ form_widget(form.image, { 'attr': {'class': 'text-black mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50'} }) }}

	</div>
</div>
<button class="btn mt-4">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
